<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/bg_2.jpg');"
  data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
      <div class="col-md-9 ftco-animate pb-5">
        <h1 class="mb-3 bread">Speakers</h1>
        <p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span>
          <span>Speakers <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>


<!-- *************************all  Speakers ********************************** -->
<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 text-center heading-section ftco-animate">
        <span class="subheading">Speaker</span>
        <h2 class="mb-4"><span>Our</span> Speakers</h2>
      </div>
    </div>
    <div class="row">
      <% for(let i=0; i<speakers.length; i++) {%>
        <div class="col-md-4 speaker">
          <div style=" height: 400px ; display: flex; justify-content: center; align-items: center;">
            <img src="images/speaker-<%= i+1  %>.png" class="rounded w-75" alt="Colorlib HTML5 Template">
          </div>
          <div class="text text-center pt-3">
            <h3>
              <%=speakers[i].name %>
            </h3>
            <span class="position">
              <%= speakers[i].job %>
            </span>
            <ul class="ftco-social mt-3">
              <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
              <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
              <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
            </ul>
          </div>
        </div>
        <% } %>
    </div>
  </div>
</section>





